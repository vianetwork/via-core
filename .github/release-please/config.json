{
  "separate-pull-requests": true,
  "group-pull-request-title-pattern": "chore: release ${component} ${branch}",
  "bootstrap-sha": "efa860f982f583e7c4312a9a33de3f337a453f10",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "include-component-in-tag": true,
  "packages": {
    "core": {
      "release-type": "simple",
      "component": "core",
      "extra-files": [
        {
          "type": "generic",
          "path": "bin/via_external_node/Cargo.toml"
        }
      ]
    },
    "prover": {
      "release-type": "simple",
      "component": "prover"
    },
    "via_indexer": {
      "release-type": "simple",
      "component": "via_indexer"
    },
    "via_verifier": {
      "release-type": "simple",
      "component": "via_verifier"
    }
  }
}
